<div class="container col-6 devise_view bg-faded">
  <hr/>
  <div>
    <h2>로그인</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="d-flex align-items-center">
    <div style="width: 400px;" class="mr-3">
      <div class="field">
        <%#= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, placeholder: " 아이디", :class => "login_field" %>
      </div>
    
      <div class="field">
        <%#= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder: " 비밀번호", :class => "login_field" %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "로그인", :class => "btn-outline-info btn login_btn" %>
    </div>
  </div>
  
  
    <% if devise_mapping.rememberable? -%>
      <div class="field mt-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
  
    
  <% end %>
  
  <%= render "devise/shared/links" %>
    
  </div>
</div>
